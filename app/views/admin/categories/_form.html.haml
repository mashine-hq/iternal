.row
  .col-md-4.col-md-offset-4
    = simple_form_for @admin_category do |f|
      = f.input :title
      = f.input :phone
      = f.input :description
      .form-group
        = f.file_field :logo
        = f.hidden_field :logo_cache
      = f.button :submit, 'Save', class: 'btn-primary col-md-12'

= form_for @admin_category do |f|
  - if @admin_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_category.errors.count, "error")} prohibited this admin_category from being saved:"
      %ul
        - @admin_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
